#!/bin/bash

# install apt-get dependancies
if [ $BUILD_ENV == "Docker" ];
then
  apt-get update
  apt-get install -y python python-tk idle python-pmw python-imaging libopencv-dev python-opencv
else
  sudo apt-get update && yes Y | sudo apt-get install python python-tk idle python-pmw python-imaging libopencv-dev python-opencv
fi

#Add Darwin


#install pip and requirements
pip install -U pip
cd /cavelab/
pip install -r requirements.txt

# Setup cavelab
python setup.py develop
